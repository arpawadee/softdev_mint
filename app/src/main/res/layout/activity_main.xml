<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/simple"
    tools:context="coe.mint.softdev_mint.MainActivity"
    >

    <EditText
        android:id="@+id/Celcius"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fahrenheit"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Celcius" />


    <TextView
        android:id="@+id/C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=" ํC"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Celcius"
        />

    <TextView
        android:id="@+id/F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=" ํF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_C2F"
        app:layout_constraintLeft_toRightOf="@id/fahrenheit"
        />
    <Button
        android:id="@+id/btn_C2F"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="C2F"
        android:backgroundTint="#00CCCC"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/C"
        />

    <Button
        android:id="@+id/btn_F2C"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="F2C"
        android:backgroundTint="#00CCCC"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_C2F"
        app:layout_constraintLeft_toRightOf="@id/F"
        />

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333300"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fahrenheit" />

</android.support.constraint.ConstraintLayout>
